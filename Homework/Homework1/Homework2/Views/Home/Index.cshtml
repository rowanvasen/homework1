@{
    ViewData["Title"] = "Home Page";
}
@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger text-center">
        @ViewBag.ErrorMessage
    </div>
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 text-center" id="Welcome-Box">
            <h1>Welcome!</h1>
            <p>Insert the given Student Names and Press the Button Below to Generate</p>
        </div>
    </div>
</div>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <form method="post" asp-controller="Home" asp-action="Teams">
                <div class="row">
                    <div class="col-12">
                        <div class="form-group" id="Student-Names">
                            <label for="StudentNames">Student Names</label>
                            <textarea class="form-control" id="Names" name="Names" rows="5" required></textarea>
                        </div>
                    </div>
                </div>
                <div class="row align-items-end">
                    <div class="col-md-6">
                        <div class="form-group" id="Team-Size">
                            <label for="TeamSize">Team Size (2-10)</label>
                            <input type="number" class="form-control" id="TeamSize" name="TeamSize" min="2" max="10" required/>
                        </div>
                    </div>
                    <div class="col-md-6 form-group">
                        <button type="submit" class="btn btn-primary w-100">Generate Teams</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>